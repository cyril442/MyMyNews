<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="330dp"
        android:layout_height="350dp" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/bluedark"
        android:padding="5dp"
        android:layout_gravity="center"
        android:orientation="vertical">

    <TextView
            android:id="@+id/thecross"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="X"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textforpopup"
            android:background="@drawable/cerclebackground"
            android:layout_marginRight="4dp"
            app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:id="@+id/textforpopup"
            android:layout_width="340dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/thecross"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="No results Found.\n Please Try again later"


    />

</android.support.constraint.ConstraintLayout>